{
  "name": "@bloomprotocol/presentation-exchange",
  "description": "Typescript types for Presentation Exchange",
  "version": "0.1.0",
  "author": "Bloom Protocol LLC <team@bloom.co>",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "dist/presentation-exchange.esm.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run size && npm run lint && npm run test",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "dependencies": {
    "json-schema-to-ts": "^1.6.3"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/presentation-exchange.cjs.production.min.js",
      "limit": "810 B"
    },
    {
      "path": "dist/presentation-exchange.esm.js",
      "limit": "810 B"
    }
  ]
}
