{
  "name": "@bloomprotocol/presentation-exchange",
  "description": "Typescript types for Credential Manifest",
  "version": "0.1.0",
  "author": "Bloom Protocol LLC <team@bloom.co>",
  "license": "Apache-2.0",
  "main": "dist/index.js",
