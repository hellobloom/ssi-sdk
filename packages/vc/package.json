{
  "name": "@bloomprotocol/vc",
  "description": "Typescript types, JSON schemas, and signing and verifying functions for Verifiable Credentials and Presentations.",
  "version": "0.1.0",
  "author": "Bloom Team <team@bloom.co>",
  "license": "Apache-2.0",
  "repository": "https://github.com/hellobloom/ssi-sdk/tree/main/packages/vc",
  "main": "dist/index.js",
  "module": "dist/vc.esm.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch --target node",
    "build": "tsdx build --target node",
    "test": "tsdx test",
    "lint": "tsdx lint src",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run size && npm run lint && npm run test",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "dependencies": {
    "ajv": "^8.2.0",
    "ajv-formats": "^2.0.2",
    "json-schema-to-ts": "^1.6.3",
    "jsonld": "^5.2.0",
    "jsonld-signatures": "^9.0.2"
  },
  "devDependencies": {
    "@bloomprotocol/ecdsa-secp256k1-signature-2019": "^0.1.0",
    "@bloomprotocol/ecdsa-secp256k1-verification-key-2019": "^0.1.0",
    "@babel/plugin-transform-modules-commonjs": "^7.14.0",
    "@digitalbazaar/ed25519-signature-2020": "^2.1.0",
    "@digitalbazaar/ed25519-verification-key-2020": "^2.1.1",
    "@digitalbazaar/vc": "^1.0.0",
    "@transmute/vc.js": "^0.2.1-unstable.11",
    "@size-limit/preset-big-lib": "^4.10.2",
    "date-fns": "^2.21.3",
    "size-limit": "^4.10.2",
    "tsd": "^0.15.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/vc.cjs.production.min.js",
      "limit": "90 KB"
    },
    {
      "path": "dist/vc.esm.js",
      "limit": "90 KB"
    }
  ]
}
