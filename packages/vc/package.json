{
  "name": "@bloomprotocol/vc",
  "description": "Typescript types, JSON schemas, and signing and verifying functions for Verifiable Credentials and Presentations.",
  "version": "0.1.0",
  "author": "Bloom Team <team@bloom.co>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/vc.esm.js",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test  --testPathIgnorePatterns=benchmark.test.ts",
    "test:benchmark": "tsdx test -i --testPathPattern=benchmark.test.ts",
    "lint": "tsdx lint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "dependencies": {
    "ajv": "^8.1.0",
    "ajv-formats": "^2.0.2",
    "json-schema-to-ts": "^1.6.1",
    "jsonld": "^2.0.2",
    "jsonld-signatures": "^5.1.0"
  },
  "devDependencies": {
    "crypto-ld": "^3.7.0",
    "tsd": "^0.14.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
